--

SELECT tag0, f64 FROM m0 LIMIT 1;

SELECT tag0, f64 FROM m0 WHERE tag0 = 'val00' LIMIT 2 OFFSET 1;

SELECT tag0, f64 FROM m0 LIMIT 1 OFFSET 1;

