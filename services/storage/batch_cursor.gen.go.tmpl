func (c *integer{{.Name}}CountBatchCursor) Next() (key []int64, value []int64) {
	ks, _ := c.{{.Name}}BatchCursor.Next()
	if len(ks) == 0 {
		return nil, nil
	}

    ts := ks[0]
    var acc int64
    for {
    	acc += int64(len(ks))
    	ks, _ = c.{{.Name}}BatchCursor.Next()
		if len(ks) == 0 {
			return []int64{ts}, []int64{acc}
		}
	}
}

