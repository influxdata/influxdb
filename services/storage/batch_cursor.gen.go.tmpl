type {{.name}}SumBatchCursor struct {
	tsdb.{{.Name}}BatchCursor
}

func (c *{{.name}}SumBatchCursor) Next() (key []int64, value []{{.Type}}) {
	ks, vs := c.{{.Name}}BatchCursor.Next()
	if len(ks) == 0 {
		return nil, nil
	}

	ts := ks[0]
	var acc {{.Type}}

	for {
    	for _, v := range vs {
    		acc += v
    	}
		ks, vs = c.{{.Name}}BatchCursor.Next()
    	if len(ks) == 0 {
    		return []int64{ts}, []{{.Type}}{acc}
    	}
	}
}

