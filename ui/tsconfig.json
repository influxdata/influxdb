{
  "compilerOptions": {
    "target": "es2017",
    "module": "esNext",
    "moduleResolution": "node",
    "lib": ["es2017", "es2018", "esnext", "dom"],
    "skipLibCheck": true,
    "isolatedModules": false,
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "noImplicitUseStrict": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "importHelpers": true,
    "noLib": false,
    "noEmitHelpers": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "resolveJsonModule": true
  },
  "exclude": [
    "assets",
    "build",
    "node_modules",
    "cypress",
    "coverage",
    "jest.config.js",
    "webpack.tsconfig.json",
    "webpack.*.ts",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/mocks.ts",
    "coverage"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "global.d.ts"
  ]
}
